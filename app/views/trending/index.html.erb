    <div class="grid">
      <div class="grid-sizer"></div>
      <div class="grid-item">
    <%= cl_image_tag(image, width: '100%',height: '500', crop: :fill) %>

    <!-- # , show_path(episode.show_id) %></strong>: <%#= episode.title %></li></ul> -->
      </div>
    <% end %>
    </div>
<% end %>
