<div class="container">
<h1>Order Details</h1>

<h3>Details for Your Order #<%= @order.id%></h3>

<table id="order-table" class="table table-hover">
<thead>
 <tr>
   <th>Order ID</th>
   <th>Date Ordered</th>
   <th>Total Price</th>
 </tr>
</thead>

<tbody>
 <tr>
 <td><%= @order.id %></td>
 <td><%= @order.created_at.strftime("Order placed on %A, %B %d, %Y at %I:%M %p") %></td>
 <td><%= @order.total_price %></td>
 </tr>
</tbody>
</table>
</div>

<div class="container">
<table id="order-item-table" class="table table-hover">
<thead>
 <tr>
   <th>Item ID</th>
   <th>Quantity</th>
   <th>Unit Price</th>
   <th>Total Price</th>
 </tr>
</thead>

<tbody>
 <tr>
 <% @order.order_items.each do |order_item| %>
 <td><%= link_to "#{order_item.show.title}", show_path(order_item.show_id) %></td>
 <td><%= order_item.quantity %></td>
 <td><%= order_item.show_price %></td>
 <td><%= order_item.item_price %></td>
 </tr>
 <% end %>
 <tr>
   <td><strong>Totals</strong></td>
   <td><strong><%= @order.total_quantity %></strong></td>
   <td></td>
   <td><strong><%= @order.total_price %></strong></td>
 </tr>
</tbody>
</table>
</div>
